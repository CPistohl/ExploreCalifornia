@model IEnumerable<ExploreCalifornia.Models.Post>

<h1>Explorer's Blog</h1>

<p>
	Below are a few of the latest posts from some of our explorers.
</p>

<p class="pager">
	@if (ViewBag.HasPreviousPage)
	{
		<a class="prev" asp-controller="Blog" asp-route-page="@ViewBag.PreviousPage">&lt; Previous</a>
		@*<a class="prev" href="@Url.Action("Index", "Blog", new { page = ViewBag.PreviousPage })">&lt; Previous</a>*@
	}

	@if (ViewBag.HasNextPage)
	{
		<a class="next" asp-controller="Blog" asp-route-page="@ViewBag.NextPage">Next &gt;</a>
		@*<a class="next" href="@Url.Action("Index", "Blog", new { page = ViewBag.NextPage })">Next &gt;</a>*@
	}
</p>

<div class="blog-posts">
	@foreach (var post in Model)
	{
		<partial name="_Post" model="post" />
		//@Html.Partial("_Post", post)
	}
</div>